language: python
python:
  - "3.7"
install:
  - pip install -e . --use-mirrors
before_script:
  - pip install -r requirements.txt --use-mirrors
  - git clone https://github.com/juaneml/prueba_travis.git
  - cd prueba_travis
  - git checkout -qf 17b8119796516195527dcb4f454a2ebd41d60244
  - py.test example/tests.py --cov=example
  - cd -
script:
  - cd ./test && pytest -v -s test.py --doctest-modules --juaneml coveralls -v --cov coveralls --cov-report term-missing
after_success:
  - coveralls
